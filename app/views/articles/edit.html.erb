<h1>Edit article</h1>

<% if @article.errors.any? %>
<p>Got errors</p>
  <% @article.errors.full_messages.each do |msg| %>
    <p><%= msg %></p>
  <% end %>
<% end %>

<%= form_for @article do |f| %>
<p>
  <strong><%= f.label :title %></strong> <br/>
  <%= f.text_field :title %>
</p>
<p>
  <strong><%= f.label :description %></strong> <br/>
  <%= f.text_area :description %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>

